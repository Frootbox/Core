{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

{{ view.set({
    'frame' : false,
}) }}

<form method="post" class="ajax" action="{{ v.getUri('Assets/Categories', 'ajaxBranchDuplicate', { 'categoryId' : category.getId(), pluginId: get.get('pluginId') }) }}">

    <div class="modal-body">

        <p>Der Zweig von „{{ category.getTitle() }}“ wird dupliziert.</p>

        <div class="form-group">
            <label for="title">Neuer Titel*</label>
            <input type="text" class="form-control" name="title" required id="title" placeholder="Titel" value="{{ category.getTitle() }}">
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Kategorie erstellen</button>
    </div>

</form>

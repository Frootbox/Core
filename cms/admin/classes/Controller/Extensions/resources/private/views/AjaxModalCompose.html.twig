<form method="post" class="ajax" action="{{ v.getUri('Extensions', 'ajaxPreInstall') }}">

    <div class="modal-body">

        <div class="form-group">
            <label for="extension">Erweiterung</label>
            <select class="form-control" id="extension" name="extension">

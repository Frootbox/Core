{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

{{ view.set({
    'frame' : false,
}) }}

<form method="post" class="ajax" action="{{ v.getUri('NavigationBars', 'ajaxItemCreate', { parentId: get.get('parentId'), navigationId: get.get('navigationId'), language: get.get('language') }) }}">

    <div class="modal-body">

        <div class="form-group">
            <label for="title">Titel</label>
            <input type="text" class="form-control" id="title" name="title" aria-describedby="titleHelp">
            <!--<small id="titleHelp" class="form-text text-muted">Der Titel dient nur zur Orientierung für dich und wird normalerweise nicht im Frontend verwendet.</small>-->
        </div>
        <div class="form-group">
            <label for="className">Typ</label>
            <select required class="form-control" id="className" name="className">
                <option value="">bitte wählen ...</option>
                {% for title,section in sections %}
                    <optgroup label="{{ title }}">
                        {% for type in section %}
                            <option {% if type.title == "CMS-Seite" %}selected{% endif %} value="{{ type.className }}">{{ type.title }}</option>
                        {% endfor %}
                    </optgroup>
                {% endfor %}
            </select>
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Navigationspunkt hinzufügen</button>
    </div>

</form>
{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

{{ view.set({
    'frame' : false,
}) }}

<form method="post" class="ajax" action="{{ v.getUri('NavigationBars', 'ajaxItemUpdate', { itemId: item.getId() }) }}">

    <div class="modal-body">

        <div class="form-group">
            <label for="title">Titel</label>
            <input type="text" class="form-control" id="title" name="title" value="{{ item.getTitle() }}">
        </div>

        <div class="form-row">
            <div class="col-md-6">

                <div class="form-group">
                    <label for="icon">Icon</label>
                    <input type="text" class="form-control" id="icon" name="icon" value="{{ item.getConfig('icon') }}">
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="iconOnly" name="iconOnly" {% if item.getConfig('iconOnly') %}checked{% endif %}>
                    <label class="form-check-label" for="iconOnly">nur das Icon zeigen</label>
                </div>

            </div>
            <div class="col-md-6">

            </div>

        </div>

        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="BreakAfter" name="BreakAfter" {% if item.getConfig('BreakAfter') %}checked{% endif %}>
            <label class="form-check-label" for="BreakAfter">Umbruch nach dem Men√ºpunkt</label>
        </div>

        {{ html | raw }}


    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Speichern</button>
    </div>

</form>
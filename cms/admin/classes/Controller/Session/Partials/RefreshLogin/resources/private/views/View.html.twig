{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<script>
    $(function ( ) {

        $('#refreshLoginForm').submit(function ( event ) {

            event.preventDefault();

            $.ajax({
                url: $(this).attr('action'),
                method: 'POST',
                data: $(this).serialize(),
                success: function ( response ) {

                    $('#partialRefreshLogin').fadeOut();

                }
            })

        });
    });
</script>

<style>
    #partialRefreshLogin {
        position: fixed;
        z-index: 10000;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;

        background: rgba(0, 0, 0, .9);
    }

    #partialRefreshLogin .pillow {
        padding: 20px;
        background: #FFF;
    }
</style>

<div id="partialRefreshLogin">
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-4">
                <div class="pillow">

                    <p><b>Ihre Sitzung ist abgelaufen!</b></p>

                    <form id="refreshLoginForm" method="post" action="{{ v.getUri('Session', 'ajaxLogin') }}">

                        <div class="form-group">
                            <label for="login">E-Mail</label>
                            <input type="email" class="form-control" id="login" name="login">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>

                        <button type="submit" class="btn btn-primary">Anmelden</button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
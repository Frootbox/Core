{{ view.set({
'title' : 'Anmeldung',
'wrapper' : 'IndexStandalone'
}) }}


<img class="logo" src="{{ serverpath }}cms/admin/resources/public/images/logo.svg" alt="Logo" />

<h2>Passwort neu setzen</h2>



<form class="ajax" method="post" action="{{ controller.getUri('ajaxPasswordSet', { login: get.get('login'), token: get.get('token') }) }}">

    <div class="form-group">
        <label for="passwd1">neues Passwort</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="far fa-lock"></i></div>
            </div>
            <input type="password" class="form-control" id="passwd1" name="passwd1" placeholder="neues Passwort" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="passwd2">Passwort wiederholen</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="far fa-lock"></i></div>
            </div>
            <input type="password" class="form-control" id="passwd2" name="passwd2" placeholder="Passwort wiederholen" value="">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">neues Passwort setzen</button>

    <a href="{{ controller.getUri('login', { login: get.get('login') }) }}" class="btn btn-outline-secondary btn-sm float-right">zur√ºck</a>

</form>

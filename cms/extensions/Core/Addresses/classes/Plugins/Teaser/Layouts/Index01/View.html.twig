{# config

title: Standard

/config #}

{% set i = view.getViewhelper('Delegator', { object: plugin }) %}

<div class="row">
    <div class="col-12 plugin Core Addresses AddressTeaser Index01">

        {% if plugin.isFirst %}
            <h1 data-editable data-uid="{{ plugin.getUid('title') }}">{{ plugin.getTitle }}</h1>
        {% else %}
            <h2 data-editable data-uid="{{ plugin.getUid('title') }}">{{ plugin.getTitle }}</h2>
        {% endif %}

        <div data-editable data-uid="{{ plugin.getUid('teaser') }}"></div>


        {% set addresses = i.getAddressesByUidText({ uidSegment: 'text', order: 'RAND()', limit: 1 }) %}

        {% for address in addresses %}

            <div class="address">

                <h4>{{ address.getTitle() }}</h4>

                <picture class="fluid" data-editable data-skipempty="1" data-uid="{{ address.getUid('image')}}">
                    <img width="{{ variables.image_width }}" height="{{ variables.image_height }}" src="{{ i.getDummyImage({ width: variables.image_width, height: variables.image_height | default(300) }) }}" alt="" />
                </picture>

                <div>{{ address.getText() | raw }}</div>

            </div>
        {% endfor %}

    </div>
</div>

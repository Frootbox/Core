{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

{{ view.set({
    'frame' : false,
}) }}

<form method="post" class="ajax" action="{{ app.getUri('ajaxFieldCreate', { groupId: group.getId(), column: get.get('column') }) }}">

    <div class="modal-body">

        <div class="form-group">
            <label for="title">Titel</label>
            <input type="text" class="form-control" name="title" required id="title" placeholder="Titel">
        </div>
        <div class="form-group">
            <label for="type">Typ</label>
            <select size="1" name="type" id="type" class="form-control">
                <option value="">bitte wählen ...</option>

                {% for field in fields %}
                    <option {% if field.fieldType == "Text" %}selected{% endif %} value="{{ field.fieldType }}">{{ field.title }}</option>
                {% endfor %}

            </select>
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">neues Feld hinzufügen</button>
    </div>
</form>

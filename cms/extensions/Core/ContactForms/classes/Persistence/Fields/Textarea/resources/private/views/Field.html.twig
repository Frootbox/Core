
<div class="form-group">
    <label for="field-{{ field.getId() }}">
        <span {% if renderer.options.editable %}data-editable-element data-uid="{{ field.getUid('title') }}"{% endif %}>{{ field.getTitle() }}</span><!--
        -->{% if field.getMandatory() %}<span class="mandatory">*</span>{% endif %}</label>
    <textarea rows="{{ field.getConfig('rows') | default(5) }}" class="form-control" id="field-{{ field.getId() }}" placeholder="{% if renderer.options.placeholderLabel %}{{ field.getTitle() }}{% if field.isRequired() %}*{% endif %}{% endif %}" name="fields[{{ field.getId() }}]" aria-describedby="helpField{{ field.getId() }}" {% if field.getConfig('helpText') %}aria-describedby="helpText{{ field.getId() }}"{% endif %}></textarea>

    {% if field.getConfig('helpText') %}<small id="helpText{{ field.getId() }}" class="form-text text-muted">{{ field.getConfig('helpText') }}</small>{% endif %}

</div>



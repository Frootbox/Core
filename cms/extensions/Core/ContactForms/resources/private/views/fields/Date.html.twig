<div class="form-group">
    <label for="field_{{ field.getId() }}">{{ field.getLabel }}{% if field.isRequired %}*{% endif %}</label>
    <input aria-describedby="fieldHelp_{{ field.getId() }}" type="date" class="form-control" id="field_{{ field.getId() }}" name="fields[{{ field.getId() }}]" placeholder="bitte eingeben ..." {% if field.isRequired %}required{% endif %}>

    {% if field.getConfig('helpText') %}
        <small id="fieldHelp_{{ field.getId() }}" class="form-text text-muted">{{ field.getHelpText() | raw }}</small>
    {% endif %}

</div>

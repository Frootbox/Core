/**

 Layers

  100 =>
  200 =>
  300 =>
  400 =>
  500 => Content
  600 =>
  700 =>
  800 => statische Navigationselemente
  900 => Banner
 1000 => Offcanvas

 */

body.offcanvas-visible {
  #offcanvas {
    display: block;
  }
}

#offcanvas {
  z-index: 1000;
  position: fixed;
  inset: 0;

  display: none;

  .outer-wrapper {
    position: absolute;
    inset: 0;

    overflow-y: auto;
    background: $ColorSpot1;

    a.logo {
      img {
        width: 100%;
        height: auto;
      }
    }
  }
}

#banner {
  position: fixed;
  z-index: 900;
  inset: 0 0 auto 0;

  a.logo {
    img {
      width: 100%;
      height: auto;
    }
  }

  .menu-col {
    text-align: right;
  }
}
body.offcanvas-visible {
  #offcanvas {
    display: block;
  }
}

#offcanvas {
  z-index: 900;
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  .outer-wrapper {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    overflow-y: auto;
    background: red;
  }
}
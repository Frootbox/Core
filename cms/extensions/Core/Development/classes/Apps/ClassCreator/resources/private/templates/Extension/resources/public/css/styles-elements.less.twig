html body {
  font-family: $FontBaseFamily;
  color: $FontBaseColor;
  font-size: $FontBaseSize;
  line-height: $FontBaseLineHeight;

  h1, h2, h3, h4 {
    clear: both;
  }

  header.h1, header.h2, header.h3, header.h4 {
    &.center {
      text-align: center;
    }

    h1, h2, h3, h4 {
      margin: 0;
      padding: 0;
    }
  }

  header.h1, h1,
  header.h2.from-h1 h2,
  header.h3.from-h1 h3,
  header.h4.from-h1 h4
  {

    margin: 100px 0 60px 0;

    color: $HeadlineH1Color;
    font-size: $HeadlineH1Size;
    line-height: $HeadlineH1LineHeight;
    font-weight: $HeadlineH1FontWeight;

    @media (min-width: 768px) {
      font-size: $HeadlineH1SizeLg;
      line-height: $HeadlineH1LineHeightLg;
    }

    h1 {
      margin: 0;
      padding: 0;
    }

    &.first {
      margin-top: 0;
    }

    .super-title {
      color: var(--headline-h1-super-title-color);
      font-size: var(--headline-h1-super-title-size);
      line-height: var(--headline-h1-super-title-line-height);
      font-weight: var(--headline-h1-super-title-font-weight);
    }

    .subtitle {
      color: $HeadlineH1SubTitleColor;
      font-size: $HeadlineH1SubTitleSize;
      line-height: $HeadlineH1SubTitleLineHeight;
      font-weight: $HeadlineH1SubTitleFontWeight;
    }

    .super-title {
      color: $HeadlineH1SuperTitleColor;
      font-size: $HeadlineH1SuperTitleSize;
      line-height: $HeadlineH1SuperTitleLineHeight;
      font-weight: $HeadlineH1SuperTitleFontWeight;
    }
  }

  header.h2, h2 {

    margin: 60px 0 40px 0;

    color: $HeadlineH2Color;
    font-size: $HeadlineH2Size;
    line-height: $HeadlineH2LineHeight;
    font-weight: $HeadlineH2FontWeight;

    @media (min-width: 768px) {
      font-size: $HeadlineH2SizeLg;
      line-height: $HeadlineH2LineHeightLg;
    }

    h2 {
      margin: 0;
      padding: 0;
    }

    &.first {
      margin-top: 0;
    }

    .super-title {
      color: $HeadlineH2SuperTitleColor;
      font-family: $HeadlineH2SuperTitleFamily;
      font-size: $HeadlineH2SuperTitleSize;
      line-height: $HeadlineH2SuperTitleLineHeight;
      font-weight: $HeadlineH2SuperTitleFontWeight;
    }
  }

  header.h3, h3 {

    margin: 60px 0 40px 0;

    color: $HeadlineH3Color;
    font-size: $HeadlineH3Size;
    line-height: $HeadlineH3LineHeight;
    font-weight: $HeadlineH3FontWeight;
    color: var(--headline-h3-color);

    @media (min-width: 768px) {
      font-size: $HeadlineH3SizeLg;
      line-height: $HeadlineH3LineHeightLg;
    }

    h3 {
      margin: 0;
      padding: 0;
    }

    &.first {
      margin-top: 0;
    }

    .subtitle {
      margin: 10px 0 0 0;

      color: $HeadlineH3SubTitleColor;
      font-size: $HeadlineH3SubTitleSize;
      line-height: $HeadlineH3SubTitleLineHeight;
      font-weight: $HeadlineH3SubTitleFontWeight;

      @media (min-width: 768px) {
        font-size: $HeadlineH3SubTitleSizeLg;
        line-height: $HeadlineH3SubTitleLineHeightLg;
      }
    }
  }

  header.h4, h4,
  header.h3.from-h4 h3
  {
    margin: 60px 0 40px 0;

    font-size: $HeadlineH4Size;
    line-height: $HeadlineH4LineHeight;
    font-weight: $HeadlineH4FontWeight;

    @media (min-width: 768px) {
      font-size: $HeadlineH4SizeLg;
      line-height: $HeadlineH4LineHeightLg;
    }

    h4 {
      margin: 0;
      padding: 0;
    }

    &.first {
      margin-top: 0;
    }

    .super-title {
      font-size: $HeadlineH4SuperTitleSize;
      line-height: $HeadlineH4SuperTitleLineHeight;
      font-weight: $HeadlineH4SuperTitleFontWeight;
    }
  }

  a {
    color: $colorSpot1;
  }

  ul {
    margin: 30px 0;
    padding: 0;

    li {
      left: 20px;
    }
  }

  .btn {

    border-radius: $ButtonPrimaryBorderRadius;

    &.btn-primary {
      background: $colorSpot1;
      border-color: $colorSpot1;
    }
  }

  .spot-back {

    &.spot-1 {
      background: $colorSpot1;
    }

    &.spot-2 {
      background: $colorSpot2;
    }

    color: #FFF;

    h1, h2, h3, h4 {
      color: #FFF;
    }

    .btn {
      &.btn-primary {
        color: #FFF;
        background: transparent;
        border-color: #FFF;
      }
    }
  }

  [data-href] {
    cursor: pointer;
  }

  div[data-blocks] {
    p:last-child, ul:last-child {
      margin-bottom: 0;
    }

    ul:first-child {
      margin-top: 0;
    }
  }

  .plugin, .EditableBlock {
    margin-top: var(--element-space);
    margin-bottom: var(--element-space);
  }
}

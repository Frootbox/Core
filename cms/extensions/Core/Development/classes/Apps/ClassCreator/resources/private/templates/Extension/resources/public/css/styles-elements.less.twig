html body {
  font-family: $fontDefault;
  color: $fontBaseColor;
  font-size: $fontBaseSize;
  line-height: $fontBaseLineHeight;

  h1, h2, h3, h4 {
    clear: both;
  }

  header.h1, h1 {

    margin: 100px 0 60px 0;

    h1 {
      margin: 0;
      padding: 0;
    }

    &.first {
      margin-top: 0;
    }
  }

  header.h2, h2 {

    margin: 60px 0 40px 0;

    h2 {
      margin: 0;
      padding: 0;
    }

    &.first {
      margin-top: 0;
    }
  }

  header.h3, h3 {

    margin: 60px 0 40px 0;

    h3 {
      margin: 0;
      padding: 0;
    }

    &.first {
      margin-top: 0;
    }
  }

  header.h4, h4 {

    margin: 60px 0 40px 0;

    h4 {
      margin: 0;
      padding: 0;
    }

    &.first {
      margin-top: 0;
    }
  }

  a {
    color: $colorSpot1;
  }

  ul {
    margin: 30px 0;
    padding: 0;

    li {
      left: 20px;
    }
  }

  .btn {
    &.btn-primary {
      background: $colorSpot1;
      border-color: $colorSpot1;
    }
  }

  .spot-back {

    &.spot-1 {
      background: $colorSpot1;
    }

    &.spot-2 {
      background: $colorSpot2;
    }

    color: #FFF;

    h1, h2, h3, h4 {
      color: #FFF;
    }

    .btn {
      &.btn-primary {
        color: #FFF;
        background: transparent;
        border-color: #FFF;
      }
    }
  }

  [data-href] {
    cursor: pointer;
  }

  div[data-blocks] {
    p:last-child, ul:last-child {
      margin-bottom: 0;
    }

    ul:first-child {
      margin-top: 0;
    }
  }

  .plugin, .EditableBlock {
    margin-top: var(--element-space);
    margin-bottom: var(--element-space);
  }
}

        <a data-toggle="tooltip" data-modal data-title="gleiche Veranstaltung erstellen" href="{{ plugin.getAdminUri('Event', 'ajaxModalCompose', { cloneFrom: event.getId() }) }}"><i class="fas fa-plus-circle"></i></a>

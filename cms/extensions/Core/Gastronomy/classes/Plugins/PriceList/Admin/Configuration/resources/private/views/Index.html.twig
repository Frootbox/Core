{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<h2>Konfiguration</h2>

<p><a class="ajax" href="{{ plugin.getAdminUri('Index', 'index', { keyword: get.get('keyword') }) }}"><i class="fa fa-chevron-circle-left"></i> zurück</a></p>

<div class="row">
    <div class="col-md-8">

        <div class="card">
            <div class="card-body">

                <form method="post" class="ajax" action="{{ plugin.getAdminUri('Configuration', 'ajaxUpdate') }}">

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="ShareAdditives" name="ShareAdditives" {% if plugin.getConfig('shareAdditives') %}checked{% endif %}>
                        <label class="form-check-label" for="ShareAdditives">Zusatzstoffe gemeinsam mit allen Plugins teilen</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Speichern</button>

                </form>

            </div>
        </div>

    </div>
    <div class="col-md-4">

        <a data-modal href="{{ plugin.getAdminUri('Configuration', 'ajaxModalAdditivesUnused') }}" class="btn btn-block btn-primary">ungenutzte Zusatzstoffe auflisten</a>
        <a href="{{ plugin.getAdminUri('Configuration', 'ajaxModalAdditivesDuplicates') }}" class="ajax btn btn-block btn-primary">doppelte Zusatzstoffe zusammenführen</a>

    </div>
</div>



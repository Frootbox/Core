{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<h2>
    Konfiguration
    {#
    <span class="headoptions">
		<a data-toggle="tooltip" data-modal data-title="neue Ansprechperson hinzufügen" href="{{ plugin.getAdminUri('Contact', 'ajaxModalCompose') }}"><i class="fa fa-plus-circle"></i></a>
	</span>
    #}
</h2>

<p><a class="ajax" href="{{ plugin.getAdminUri('Index', 'index') }}"><i class="fa fa-chevron-circle-left"></i> zurück</a></p>


<div class="row">
    <div class="col">

        <div class="card">
            <div class="card-body">

                <form method="post" class="ajax" action="{{ plugin.getAdminUri('Configuration', 'ajaxUpdate') }}">

                    <div class="form-group form-check">
                        <input {% if plugin.getConfig('noPersonsDetailPage') %}checked{% endif %} type="checkbox" class="form-check-input" id="noPersonsDetailPage" name="noPersonsDetailPage">
                        <label class="form-check-label" for="noPersonsDetailPage">keine Detailseite für Ansprechpersonen</label>
                    </div>
                    <div class="form-group form-check">
                        <input {% if plugin.getConfig('noCategoriesDetailPage') %}checked{% endif %} type="checkbox" class="form-check-input" id="noCategoriesDetailPage" name="noCategoriesDetailPage">
                        <label class="form-check-label" for="noCategoriesDetailPage">keine Detailseite für Kategorien</label>
                    </div>
                    <div class="form-group">
                        <label for="defaultSorting">Standard Sortierung</label>
                        <select class="form-control" id="defaultSorting" name="defaultSorting">
                            <option {% if plugin.getConfig('defaultSorting') == "Manually" %}selected{% endif %} value="Manually">manuell</option>
                            <option {% if plugin.getConfig('defaultSorting') == "LastnameAsc" %}selected{% endif %} value="LastnameAsc">Nachname, auftseigend</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Speichern</button>

                </form>

            </div>
        </div>

        <div class="card">
            <div class="card-body">

                {% if user.getType == 'SuperAdmin' %}
                    <a class="btn btn-secondary ajax" href="{{ plugin.getAdminUri('Configuration', 'ajaxImportConnectedPersons') }}">verknüpfte Personen von anderen Plugins importieren</a>
                {% endif %}

            </div>
        </div>

    </div>
</div>
    <div class="col-12 plugin Core HelpAndSupport ContactPersons Index07">

        {% if plugin.isFirst %}
            <h1 data-editable data-uid="{{ plugin.getUid('title') }}">{{ plugin.getTitle }}</h1>
        {% else %}
            <h2 data-editable data-uid="{{ plugin.getUid('title') }}">{{ plugin.getTitle }}</h2>
        {% endif %}

        <div class="teaser" data-editable data-uid="{{ plugin.getUid('teaser') }}"></div>

        {{ sp.renderPartial('Partials/Category', { fromfile: __FILE__, colClass: colClass, category: i.getCategory(), heading: 2 }) | raw }}



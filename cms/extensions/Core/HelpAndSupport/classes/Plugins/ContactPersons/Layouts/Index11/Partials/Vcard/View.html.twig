<div class="vcard">

    {% if withThumbnail %}
        <picture data-editable data-uid="{{ contact.getUid('image')}}">
            <img width="{{ thumbnailWidth | default(600) }}" height="{{ thumbnailHeight | default(400) }}" src="{{ i.getDummyImage({ width: thumbnailWidth | default(600), height: thumbnailHeight | default(400) }) }}" alt="" />
        </picture>
    {% endif %}

    <address class="adr">
        <div class="fn">{{ contact.getName() }}</div>

        {% if contact.getPosition() %}
            <div class="role">{{ contact.getPosition() | nl2br }}</div>
        {% endif %}
    </address>

    {% if contact.getPhone() %}
        <a class="tel" href="tel:{{ contact.getPhone() }}">{{ contact.getPhone() }}</a>
    {% endif %}

    {% if contact.getEmail() %}
        <a class="email" href="mailto:{{ contact.getEmail() }}">{{ contact.getEmail() }}</a>
    {% endif %}
</div>
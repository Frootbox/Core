					<td>{{ target.getTitle() }}</td>
					<td class="text-right">
						<a class="ajax" data-confirm="Soll diese Verbindung wirklich gelÃ¶st werden?" href="{{ data.plugin.getAdminUri('Question', 'ajaxConnectionDelete', { targetId: target.getId(), questionId: question.getId() }) }}"><i class="fa fa-times"></i></a>

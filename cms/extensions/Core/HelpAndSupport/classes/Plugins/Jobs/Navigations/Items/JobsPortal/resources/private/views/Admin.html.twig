<script nonce="{{ settings.nonce }}">
    $(function() {

        $(document).on('change', '#jobId', function(event) {

            let title = $('#jobId').find(":selected").text();

            $('#title').val(title);

        });
    });
</script>

<div class="form-group">
    <label for="PluginId">Jobs-Portal</label>
    <select required class="form-control" id="PluginId" name="PluginId">
        <option value="">bitte w√§hlen ...</option>
        {% for ThisPlugin in item.getJobPlugins() %}
            <option {% if ThisPlugin.getId() == item.getConfig('PluginId') %}selected{% endif %} value="{{ ThisPlugin.getId() }}">{{ ThisPlugin.getPage().getTitle() }} > {{ ThisPlugin.getTitle() }}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="ShowChildren" name="ShowChildren" {% if item.getConfig('ShowChildren') %}checked{% endif %}>
    <label class="form-check-label" for="ShowChildren">Jobs als Unterpunkte auflisten</label>
</div>

{# config

title: Standard
variables:
    withContainer:
        type: bool
        label: mit Layout-Container

/config #}

{% set i = view.getViewhelper('Delegator', { object: plugin }) %}

{% set keywords = i.getKeywords() %}

<div class="plugin Core HelpAndSupport KeywordIndex Index01">
    {% if variables.withContainer %}<div class="container">{% endif %}

    <div class="row">
        <div class="col-md-12">

            <h2 class="first main-title" data-editable data-uid="{{ plugin.getUid('title') }}">{{ plugin.getTitle() }}</h2>

            <div data-editable data-uid="{{ plugin.getUid('teaser') }}"></div>

            <br />

            <div class="row">
                <div class="col-4">

                    {% set keywordPerColumn = (keywords.getCount / 3) | round(0, 'ceil') %}

                    <ul>
                        {% for keyword in keywords %}
                            <li><a href="{{ keyword.getUri }}">{{ keyword.getTitle }}</a></li>

                            {% if loop.index % keywordPerColumn == 0 %}
                                    </ul>
                                </div>
                                <div class="col-4">
                                    <ul>
                            {% endif %}

                        {% endfor %}
                    </ul>

                </div>
            </div>


        </div>
    </div>

    {% if variables.withContainer %}</div>{% endif %}
</div>

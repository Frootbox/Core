{# config

title: Standard
variables:
    withContainer:
        type: bool
        label: mit Layout-Container

/config #}

{% set i = view.getViewhelper('Delegator', { object: plugin }) %}

{% set sections = plugin.getKeywordsByInitial() %}

<div class="plugin Core HelpAndSupport KeywordIndex Index02">
    {% if variables.withContainer %}<div class="container">{% endif %}

    <div class="row">
        <div class="col-md-12">

            <h2 class="first main-title" data-editable data-uid="{{ plugin.getUid('title') }}">{{ plugin.getTitle() }}</h2>

            <div data-editable data-uid="{{ plugin.getUid('teaser') }}"></div>

            <nav class="initials">
                {% for initial, keyword in sections %}
                    <a href="#{{ initial }}">{{ initial }}</a>
                {% endfor %}
            </nav>

            <div class="keywords _skipsearch">
                {% for initial, keywords in sections %}

                    <div class="row">
                        <div class="col-md-2">
                            <div class="sticky-top">
                                <h2 class="first initial" id="{{ initial }}">{{ initial }}</h2>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="keywords-wrapper">

                                {% for keyword in keywords %}
                                    <div class="keyword">
                                        <h4 class="first main-title" data-editable data-uid="{{ keyword.getUid('title') }}">{{ keyword.getTitle() }}</h4>
                                        <div data-editable data-uid="{{ keyword.getUid('teaser') }}"></div>
                                    </div>
                                {% endfor %}

                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>

        </div>
    </div>

    {% if variables.withContainer %}</div>{% endif %}
</div>

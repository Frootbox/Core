{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<h2>
    Linksammlung

    <span class="headoptions">
		<a data-toggle="tooltip" data-modal data-title="neuen Link hinzufügen" href="{{ plugin.getAdminUri('Link', 'ajaxModalCompose') }}"><i class="fa fa-plus-circle"></i></a>

        <span class="dropdown">
            <i class="far fa-bars dropdown-toggle" data-toggle="dropdown"></i>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item ajax" href="{{ plugin.getAdminUri('Index', 'config') }}">Konfiguration</a>
            </div>
        </span>
	</span>

</h2>

<p><a class="ajax" href="{{ v.getUri('Page', 'ajaxPanelContent', { 'pageId' : plugin.getPageId() }) }}"><i class="fa fa-chevron-circle-left"></i> zurück</a></p>

<div id="linksReceiver">
    {{ v.injectPartial('\\Frootbox\\Ext\\Core\\HelpAndSupport\\Plugins\\Links\\Admin\\Link\\Partials\\ListLinks', {
        plugin : plugin
    }) | raw }}
</div>

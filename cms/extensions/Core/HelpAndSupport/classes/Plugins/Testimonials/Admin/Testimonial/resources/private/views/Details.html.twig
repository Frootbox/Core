{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<h2>
    Bewertung bearbeiten
</h2>

<p><a class="ajax" href="{{ plugin.getAdminUri('Index', 'index') }}"><i class="fa fa-chevron-circle-left"></i> zur√ºck</a></p>

<div class="row">
    <div class="col">

        <div class="card">
            <div class="card-body">

                <form method="post" class="ajax" action="{{ plugin.getAdminUri('Testimonial', 'ajaxUpdate', { entityId: entity.getId() }) }}">

                    <div class="form-group">
                        <label for="title">Titel</label>
                        <input type="text" class="form-control" id="title" name="title" value="{{ entity.getTitle() }}">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="dateStart">Datum</label>
                            <input type="date" class="form-control" id="dateStart" name="dateStart" placeholder="Datum" value="{{ entity.getDateStart() | default(entity.getDate()) | date("Y-m-d") }}">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="timeStart">Uhrzeit</label>
                            <input type="text" class="form-control" id="timeStart" name="timeStart" placeholder="Uhrzeit" value="{{ entity.getDateStart() | default(entity.getDate()) | date("H:i:s") }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="stars">Sterne</label>
                        <select class="form-control" id="stars" name="stars">
                            <option value="0">0</option>
                            <option {% if entity.getConfig('stars') == 1 %}selected{% endif %} value="1">1</option>
                            <option {% if entity.getConfig('stars') == 2 %}selected{% endif %} value="2">2</option>
                            <option {% if entity.getConfig('stars') == 3 %}selected{% endif %} value="3">3</option>
                            <option {% if entity.getConfig('stars') == 4 %}selected{% endif %} value="4">4</option>
                            <option {% if entity.getConfig('stars') == 5 %}selected{% endif %} value="5">5</option>
                        </select>
                    </div>

                    {{ v.injectPartial('\\Frootbox\\Admin\\View\\Partials\\Input\\Tags', {
                        object: entity
                    }) | raw }}

                    <button type="submit" class="btn btn-primary">Speichern</button>

                </form>

            </div>
        </div>

    </div>
</div>

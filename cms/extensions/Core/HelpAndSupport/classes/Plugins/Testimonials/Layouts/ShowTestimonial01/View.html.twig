    {% if variables.withContainer %}<div class="container">{% endif %}

    <div class="row">
        <div class="col-12">
            <div class="inner-wrapper">

                <h2 class="first main-title" data-editable data-uid="{{ testimonial.getUid('title') }}">{{ testimonial.getTitle() }}</h2>

                <div data-editable data-uid="{{ testimonial.getUid('teaser') }}"></div>

            </div>
        </div>
    </div>

    {% if variables.withContainer %}</div>{% endif %}

</div>

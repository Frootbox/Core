{# config

title: Standard
variables:
    imageWidth:
        type: int
        label: Bildbreite
        default: 535
    imageHeight:
        type: int
        label: Bildh√∂he
        default: 300


/config #}

{% set i = view.getViewhelper('Delegator', { object: plugin }) %}

<param name="cloak" value="1" />

{{ view.set('hideGlobalBlocks', true) }}

<div class="plugin Core Images References ShowCategory01">

    <div class="container">
        <div class="row">
            <div class="col-12">

                <h1 class="first main-title" data-editable data-uid="{{ Category.getUid('title') }}">{{ Category.getTitle() }}</h1>

                <div class="teasers">
                    <div class="row">
                        {% for Reference in Category.getItems() %}
                            <div class="col-md-3">
                                <div class="teaser">
                                    <picture class="fluid" data-editable {% if variables.noImageDummy %}data-skipempty="1"{% endif %} data-uid="{{ Reference.getUid('image') }}">
                                        <img width="{{ variables.imageWidth }}" height="{{ variables.imageHeight }}" src="{{ i.getDummyImage({ width: variables.imageWidth, height: variables.imageHeight }) }}" alt="" />
                                    </picture>

                                    <h4 class="first" data-editable data-uid="{{ Reference.getUid('title') }}">{{ Reference.getTitle() }}</h4>

                                    <p class="read-more">
                                        <a href="{{ Reference.getUri() }}">Mehr erfahren</a>
                                    </p>

                                </div>
                            </div>
                        {% endfor %}
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>

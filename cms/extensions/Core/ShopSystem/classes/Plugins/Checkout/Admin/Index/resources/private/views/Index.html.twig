{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<h2>
    Kasse

    {#
    <span class="headoptions">
		<a data-toggle="tooltip" data-modal data-title="neue Formulargruppe hinzufügen" href="{{ plugin.getAdminUri('Group', 'ajaxModalCompose') }}"><i class="fa fa-plus-circle"></i></a>
	</span>
    #}
</h2>

<p><a class="ajax" href="{{ v.getUri('Page', 'ajaxPanelContent', { pageId: plugin.getPageId() }) }}"><i class="fa fa-chevron-circle-left"></i> zurück</a></p>

<div class="row">
    <div class="col">

        <div class="card">
            <div class="card-body">

                <form method="post" class="ajax" action="{{ plugin.getAdminUri('Index', 'ajaxUpdate') }}">

                    <div class="row">
                        <div class="col-md-6">

                            <h3>allgemeine Einstellungen</h3>

                            <div class="form-group form-check">
                                <input {% if plugin.getConfig('skipLinkage') %}checked{% endif %} type="checkbox" class="form-check-input" id="skipLinkage" name="skipLinkage">
                                <label class="form-check-label" for="skipLinkage">ohne Verlinkung der Artikel im Warenkorb</label>
                            </div>
                            <div class="form-group form-check">
                                <input {% if plugin.getConfig('skipCoupons') %}checked{% endif %} type="checkbox" class="form-check-input" id="skipCoupons" name="skipCoupons">
                                <label class="form-check-label" for="skipCoupons">ohne Coupons</label>
                            </div>
                            <div class="form-group form-check">
                                <input {% if plugin.getConfig('skipShipping') %}checked{% endif %} type="checkbox" class="form-check-input" id="skipShipping" name="skipShipping">
                                <label class="form-check-label" for="skipShipping">kein Versand</label>
                            </div>
                            <div class="form-group form-check">
                                <input {% if plugin.getConfig('showNetPrices') %}checked{% endif %} type="checkbox" class="form-check-input" id="showNetPrices" name="showNetPrices">
                                <label class="form-check-label" for="showNetPrices">Netto-Preise</label>
                            </div>
                            <div class="form-group form-check">
                                <input {% if plugin.getConfig('skipCustomerLogin') %}checked{% endif %} type="checkbox" class="form-check-input" id="skipCustomerLogin" name="skipCustomerLogin">
                                <label class="form-check-label" for="skipCustomerLogin">kein Kunden-Login</label>
                            </div>
                            <div class="form-group form-check">
                                <input {% if plugin.getConfig('ownOrderNumber') %}checked{% endif %} type="checkbox" class="form-check-input" id="ownOrderNumber" name="ownOrderNumber">
                                <label class="form-check-label" for="ownOrderNumber">eigene Bestellnummer angeben</label>
                            </div>
                            <div class="form-group form-check">
                                <input {% if plugin.getConfig('PaymentExtraStep') %}checked{% endif %} type="checkbox" class="form-check-input" id="PaymentExtraStep" name="PaymentExtraStep">
                                <label class="form-check-label" for="PaymentExtraStep">eigener Schritt für Zahlungsarten</label>
                            </div>

                        </div>
                        <div class="col-md-6">

                            <h3>Warenkorb deaktiviert</h3>

                            <div class="form-group">
                                <label for="dateFrom">von</label>
                                <input type="date" class="form-control" id="dateFrom" name="dateFrom" value="{{ plugin.getConfig('shopInactive.from') }}" aria-describedby="emailHelp">
                                <small id="emailHelp" class="form-text text-muted">Ab diesem Datum sind Bestellungen deaktiviert.</small>
                            </div>
                            <div class="form-group">
                                <label for="dateTo">bis</label>
                                <input type="date" class="form-control" id="dateTo" name="dateTo" value="{{ plugin.getConfig('shopInactive.to') }}" aria-describedby="emailHelp">
                                <small id="emailHelp" class="form-text text-muted">Ab diesem Datum sind Bestellungen wieder aktiviert.</small>
                            </div>

                            <h3>Selbstabholung</h3>

                            <div class="form-group">
                                <label for="SelfPickupTimes">Abholzeiten</label>
                                <textarea class="form-control" id="SelfPickupTimes" name="SelfPickupTimes" rows="3">{{ plugin.getConfig('SelfPickupTimes') }}</textarea>
                                <small id="emailHelp" class="form-text text-muted">Eine Option pro Zeile.</small>
                            </div>

                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Speichern</button>

                </form>

            </div>
        </div>

    </div>
</div>

{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<h2>
    Einzel-Produkt
</h2>

<p><a class="ajax" href="{{ v.getUri('Page', 'ajaxPanelContent', { pageId: plugin.getPageId() }) }}"><i class="fa fa-chevron-circle-left"></i> zurück</a></p>

<div class="card">
    <div class="card-body">

        <form method="post" class="ajax" action="{{ plugin.getAdminUri('Index', 'ajaxUpdate') }}">

            <div class="form-group">
                <label for="productId">Produkt</label>
                <select class="form-control" id="productId" name="productId">
                    <option value="">bitte wählen ..</option>
                    {% for product in products %}
                        <option {% if plugin.getConfig('productId') == product.getId() %}selected{% endif %} value="{{ product.getId() }}">{{ product.getTitle() }}</option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Speichern</button>

        </form>

    </div>
</div>

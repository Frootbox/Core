{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<h2>
    Hersteller „{{ manufacturer.getTitle }}“
</h2>

<p><a class="ajax" href="{{ plugin.getAdminUri('Manufacturers', 'index') }}"><i class="fa fa-chevron-circle-left"></i> zurück</a></p>

<div class="card">
    <div class="card-body">

        <form method="post" class="ajax" action="{{ plugin.getAdminUri('Manufacturers', 'ajaxUpdate', { manufacturerId: manufacturer.getId() }) }}">

            <div class="form-group">
                <label for="title">Titel</label>
                <input type="text" class="form-control" id="title" name="title" value="{{ manufacturer.getTitle() }}">
            </div>

            <button type="submit" class="btn btn-primary">Speichern</button>

        </form>

    </div>
</div>
{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

<h2>
    Selbstabholung


    <span class="headoptions">
        <span class="dropdown">
            <i class="far fa-bars dropdown-toggle" data-toggle="dropdown"></i>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" data-modal data-title="Konfiguration" href="{{ plugin.getAdminUri('SelfPickup', 'ajaxModalConfiguration') }}"><i class="far fa-fw fa-cog icon"></i>Konfiguration</a>
            </div>
        </span>
    </span>
</h2>

<p><a class="ajax" href="{{ plugin.getAdminUri('Index', 'index') }}"><i class="fa fa-chevron-circle-left"></i> zurück</a></p>

<div id="venuesReceiver">
    {{ v.injectPartial('/Frootbox/Ext/Core/Addresses/Admin/Partials/AddressManager', {
        plugin: plugin,
        repository: '\\Frootbox\\Ext\\Core\\ShopSystem\\Persistence\\Repositories\\PickupLocation'
    }) | raw }}
</div>

<h3>
    Abholzeiten
    <span class="headoptions">
		<a data-toggle="tooltip" data-modal data-title="neue Abholzeit hinzufügen" href="{{ plugin.getAdminUri('SelfPickup', 'ajaxModalTimeCompose') }}"><i class="fa fa-plus-circle"></i></a>
	</span>
</h3>

<div id="pickup-time-receiver">
    {{ v.injectPartial('\\Frootbox\\Ext\\Core\\ShopSystem\\Plugins\\ShopSystem\\Admin\\SelfPickup\\Partials\\PickupTimes', {
        Plugin: plugin,
    }) | raw }}
</div>

<h3>Abholungstage sperren</h3>

<div id="pickupDaysReceiver">
    {{ v.injectPartial('\\Frootbox\\Ext\\Core\\ShopSystem\\Plugins\\ShopSystem\\Admin\\SelfPickup\\Partials\\PickupDays', {
        'plugin': plugin,
        'date': date
    }) | raw }}
</div>
<form class="ajax" method="post" action="{{ plugin.getAdminUri('Shipping', 'ajaxUpdateTimes') }}">

    <div class="card">
        <div class="card-body">

            <h4>Bevorzugtee Lieferzeiten</h4>

            {% set Loop = 0 %}

            {% for Time in plugin.getConfig('shipping.times') %}
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="TimeFrom">Uhrzeit von</label>
                            <input type="time" class="form-control" id="TimeFrom" name="Times[{{ Loop }}][TimeFrom]" value="{{ Time.TimeFrom }}">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="TimeTo">Uhrzeit bis</label>
                            <input type="time" class="form-control" id="TimeTo" name="Times[{{ Loop }}][TimeTo]" value="{{ Time.TimeTo }}">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="Surcharge">Aufschlag</label>
                            <input type="number" step="0.01" min="0" class="form-control" id="Surcharge" name="Times[{{ Loop }}][Surcharge]" value="{{ Time.Surcharge }}">
                        </div>
                    </div>
                </div>

                {% set Loop = Loop + 1 %}
            {% endfor %}

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="TimeFrom">Uhrzeit von</label>
                        <input type="time" class="form-control" id="TimeFrom" name="Times[{{ Loop }}][TimeFrom]">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="TimeTo">Uhrzeit bis</label>
                        <input type="time" class="form-control" id="TimeTo" name="Times[{{ Loop }}][TimeTo]">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Surcharge">Aufschlag</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="Surcharge" name="Times[{{ Loop }}][Surcharge]">
                    </div>
                </div>
            </div>

            <button type="submit" class="mt-3 btn btn-primary">Speichern</button>

        </div>
    </div>

</form>
{% set i = view.getViewhelper('Delegator', { object: plugin }) %}
{% set p = view.getViewhelper('Partials', { plugin: plugin }) %}

<div class="row">
    <div class="col-12 plugin Core ShopSystem ShopSystem ShowManufacturer01">

        {% if plugin.isFirst %}
            <h1 data-editable data-uid="{{ manufacturer.getUid('title') }}">{{ manufacturer.getTitle }}</h1>
        {% else %}
            <h2 data-editable data-uid="{{ manufacturer.getUid('title') }}">{{ manufacturer.getTitle }}</h2>
        {% endif %}

        <div class="row align-items-center">
            <div class="col-md-4">

                <picture class="fluid" data-editable data-uid="{{ manufacturer.getUid('image')}}">
                    <img width="600" height="300" src="{{ i.getDummyImage({ width: 600, height: 300 }) }}" alt="" />
                </picture>

            </div>
            <div class="col-md-8">

                <div class="teaser">
                    <div data-editable data-nowidgets data-uid="{{ manufacturer.getUid('teaser') }}"></div>
                    <p><a class="read-more" href="#read-more">weiterlesen</a></p>
                </div>


            </div>
        </div>

        <h3 data-editable data-uid="{{ plugin.getUid('title-articles') }}">Artikel dieses Herstellers</h3>

        <div class="row products">
            {% for product in manufacturer.getProducts() %}
                <div class="col-6 col-md-3 product">
                    {{ p.renderPartial('/Frootbox/Ext/Core/ShopSystem/Plugins/ShopSystem/ProductTeaser', { product: product }) | raw }}
                </div>
            {% endfor %}
        </div>

        <div id="read-more">
            <div data-editable data-uid="{{ manufacturer.getUid('text') }}"></div>
        </div>

    </div>
</div>
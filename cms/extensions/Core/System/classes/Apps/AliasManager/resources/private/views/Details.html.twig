{% set v = view.getViewHelper('\\Frootbox\\Admin\\Viewhelper\\GeneralPurpose') %}

{{ front.addTab('Alias-Verwaltung', app.getUri('index')) }}

{% if alias.getType() == 'Generic' %}
    {{ front.addTab('generische Aliase', app.getUri('generic')) }}
{% endif %}


<h2>
   Alias Details
</h2>

<div class="card">
    <div class="card-body">

        <code><a href="{{ settings.serverpath }}{{ alias.getAlias() }}" target="_blank">{{ settings.serverpath }}{{ alias.getAlias() }}</a></code>

    </div>
</div>

<br />

<div class="row">
    <div class="col-md-6">

        <pre>
            {{ dump(alias) }}
        </pre>

    </div>
    <div class="col-md-6">

        <div class="card">
            <div class="card-body">

                <h3>SEO</h3>

                <form method="post" action="{{ app.getUri('ajaxUpdateSeo', { aliasId: alias.getId() }) }}" class="ajax">

                    <div class="form-group">
                        <label for="title">Titel</label>
                        <input type="text" class="form-control" id="title" name="title" aria-describedby="emailHelp" placeholder="Titel" value="{{ alias.getCOnfig('seo.title') }}">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="keywords">Meta-Keywords</label>
                        <textarea rows="5" class="form-control" id="keywords" name="keywords" aria-describedby="keywordsHelp" placeholder="Meta-Keywords">{{ alias.getConfig('seo.keywords') }}</textarea>
                        <small id="keywordsHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="description">Meta-Beschreibung</label>
                        <textarea rows="5" class="form-control" id="description" name="description" aria-describedby="descriptionHelp" placeholder="Meta-Beschreibung">{{ alias.getConfig('seo.description') }}</textarea>
                        <small id="descriptionHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>

                    <button type="submit" class="btn btn-primary">Speichern</button>

                </form>

            </div>
        </div>

    </div>
</div>


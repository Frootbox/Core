		<tbody>

			{% for ConfigValue in ConfigurationValues %}
				<tr>
					<td>
						<label for="Value{{ ConfigValue.getId() }}">
							{{ ConfigValue.getConfigKey() }}
						</label>
					</td>
					<td>
						<input type="text" class="form-control" id="Value{{ ConfigValue.getId() }}" name="Values[{{ ConfigValue.getId() }}]" value="{{ ConfigValue.getConfigValue() }}">
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>


	<button type="submit" class="btn btn-primary">Speichern</button>

</form>
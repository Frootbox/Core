{# config

title: Standard
variables:
    withContainer:
        type: bool
        label: mit Layout-Container


/config #}

{% set i = view.getViewhelper('Delegator', { object: plugin }) %}
{% set b = view.getViewhelper('Breadcrumb', { singleton: true }) %}

{{ b.addSection(video.getTitle(), video.getUri()) }}

{{ view.set('hideGlobalBlocks', true) }}


<div class="plugin Core Video Gallery ShowVideo01">

    {% if variables.withContainer %}<div class="container">{% endif %}

    <div class="row">
        <div class="col-12">

            <h2 class="first main-title" data-editable data-uid="{{ video.getUid('title') }}">{{ video.getTitle }}</h2>

            <div data-editable data-uid="{{ video.getUid('teaser') }}"></div>

            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="{{ video.getEmbedUri() }}" allowfullscreen></iframe>
            </div>

        </div>
    </div>

    {% if variables.withContainer %}</div>{% endif %}

</div>